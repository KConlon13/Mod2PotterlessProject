<h1>New Casting</h1>

<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
 
<%= form_for @casting do |f| %>
<%= f.label :spells %>
<%= f.collection_select(:spell_id, @spells, :id, :name, prompt: 'Choose your spell') %>
<%= f.hidden_field :user_id, :value => session[:user_id] %>
<%= f.submit 'Make some magic'%> 
<% end %>