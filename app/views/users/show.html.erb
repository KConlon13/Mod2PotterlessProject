
    <h1><%= @user.name %></h1>
    
    <p> Of House <%= link_to @user.house.name, "/houses/#{@user.house.id}" %></p>
    <div class="showpage_sigil">
        <%= image_tag @user.house.logo_img_url %>
    </div>
    <div class="lowerthree">
        <div id="showpage_spells">
            
            <p><u><b>Spell Book: </b></u></p>
            <% @castings.each do |casting| %>
            <div class="hyperlinks"><li><%= link_to casting.spell.name, "/spells/#{casting.spell.id}"  %></li></div>
            <% end %>
            <br>
            <br>
            <div class="button">
                <%= button_to 'cast a spell', "/castings/new", method: :get %>
            </div>
        </div>

        
        <div id= "showpage_wands">
            
            <p><u><b>Wand Info: </b></u></p>
            <div class="hyperlinks">
            <% @wands.each do |wand| %>
            <li><u>Wood:</u>  <%= wand.wood %></li>
            <li><u>Core:</u>  <%= wand.core %></li>
            <li><u>Length:</u>  <%= wand.length %></li>
            <li><u>Flexibility:</u>  <%= wand.flexibility %></li>
            <% end %>
            </div>
            <br>
            
            <% if @wands.count == 0 %>
            <div class="button">
                <%= button_to "create your wand!", "/wands/new", method: :get %>
            </div>
            <% end %>
            
            <% if @wands.count > 0 %>
            <% @wands.each do |wand| %>
            <%= button_to "edit wand", "/wands/#{wand.id}/edit", method: :get %>
            <% end %>
            <% end %>
        </div>
        
        
        <div id="showpage_patronus">
            

            <% @patronus.each do |patronu| %>
            <p><u> Patronus:</u></p>
            <div class="hyperlinks">
            <li><%= link_to patronu.animal, "/patronus/#{patronu.id}" %></li>
            </div>
            <% end %>
            <br>
            <br>

            <% if @patronus.count == 0 %>
            
            <div class="button">
                <%= button_to "create patronus", "/patronus/new", method: :get %>
            </div>
            <% end %>
            
            <% if @patronus.count > 0 %>
            <% @patronus.each do |patronu| %>
                <%= button_to "edit patronus", "/patronus/#{patronu.id}/edit", method: :get %>
            <% end %>
            <% end %>
        </div>
    </div>
